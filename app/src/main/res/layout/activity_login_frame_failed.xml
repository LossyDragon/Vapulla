<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.dragonbra.vapulla.activity.LoginActivity">

    <ImageView
        android:id="@+id/vapullaLogoBottom"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/animated_vapulla_bottom"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/vapullaLogoMiddle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/animated_vapulla_middle"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/vapullaLogoTop"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vapulla_top"
        tools:ignore="ContentDescription" />

    <include
        layout="@layout/login_error_text"
        android:visibility="invisible" />

    <include
        layout="@layout/login_username"
        android:visibility="invisible" />

    <include
        layout="@layout/login_password"
        android:visibility="invisible" />

    <include
        layout="@layout/login_button"
        android:visibility="invisible" />

    <include layout="@layout/login_loading_text" />

    <include
        layout="@layout/login_steam_guard"
        android:visibility="invisible" />

    <include
        layout="@layout/login_steam_guard_button"
        android:visibility="invisible" />

    <include
        layout="@layout/login_steam_guard_cancel"
        android:visibility="invisible" />

    <include layout="@layout/login_retry_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
